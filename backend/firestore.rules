rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Dashboard (client) needs read access to tickets.
    // Writes are expected to come from trusted backends (e.g. Admin SDK / webhooks).
    match /tickets/{ticketId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny for every other collection/document.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
